<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_password_reset_actvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="notifyme.com.notifyme.Authentication.PasswordResetActvity"
    android:background="@drawable/vectorcloudbackgroundblue">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="65dp"
        android:id="@+id/resetEmailEditText"
        android:hint="Email Address "
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fdfdfe"
        android:textColorHighlight="#fdfdfe"/>

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetlLoginButton"
        android:layout_below="@+id/resetResetButton"
        android:background="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:text="Password Reset "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:id="@+id/resetResetButton"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/resetEmailEditText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
