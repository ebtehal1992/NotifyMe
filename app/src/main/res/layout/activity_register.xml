<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="notifyme.com.notifyme.Authentication.RegisterActivity"
    android:background="@drawable/vectorcloudbackgroundblue"
    android:theme="@style/AppTheme">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="36"
        android:layout_marginTop="17dp"
        android:id="@+id/registerNameEditText"
        android:hint="Full Name"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:maxLength="21"
        android:id="@+id/registerPasswordEditText"
        android:hint="Password"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/registerEmailEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white" />

    <Button
        android:text="Login"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerLoginButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/registerRegisterButton"
        android:layout_alignStart="@+id/registerRegisterButton"
        android:layout_marginBottom="65dp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:text="Register"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerRegisterButton"
        android:layout_above="@+id/registerLoginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registerEmailEditText"
        android:hint="Email"
        android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/registerNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white" />
</RelativeLayout>
